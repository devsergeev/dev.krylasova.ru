{
  "name": "devsergeev/krylasova.ru",
  "description": "krylasova.ru",
  "type": "project",
  "authors": [
    {
      "name": "devsergeev",
      "email": "sergeev.vasily.v@gmail.com"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^8.0",
    "dms/phpunit-arraysubset-asserts": "^0.3.0",
    "doctrine/migrations": "^3.1",
    "doctrine/orm": "^2.8",
    "finesse/swiftmailer-defaults-plugin": "^2.0",
    "guzzlehttp/guzzle": "^7.3",
    "laminas/laminas-config-aggregator": "^1.5",
    "monolog/monolog": "^2.2",
    "php-di/php-di": "^6.3",
    "ramsey/uuid": "^4.1",
    "sentry/sdk": "^3.1",
    "slim/psr7": "^1.3",
    "slim/slim": "^4.7",
    "swiftmailer/swiftmailer": "^6.2",
    "symfony/console": "^5.2",
    "twig/twig": "^3.3",
    "webmozart/assert": "^1.10"
  },
  "require-dev": {
    "doctrine/data-fixtures": "^1.5",
    "lctrs/psalm-psr-container-plugin": "^1.1",
    "overtrue/phplint": "^2.3",
    "phpunit/phpunit": "^9.5",
    "psalm/plugin-phpunit": "^0.15.1",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
        "sudo chmod -R 777 ./var"
    ],

    "app": "php -d xdebug.mode=off bin/app.php --ansi",
    "clear": "sudo rm -rf var/cache/* var/log/* var/test/*",
    "code-check": "php -d xdebug.mode=off ./vendor/bin/phpcs",
    "code-fix": "php -d xdebug.mode=off ./vendor/bin/phpcbf",
    "lint": "php -d xdebug.mode=off ./vendor/bin/phplint",
    "psalm": "php -d xdebug.mode=off ./vendor/bin/psalm",
    "test-functional-coverage": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --colors=always --testsuite=functional --coverage-html var/test/coverage",
    "test-functional": "php -d xdebug.mode=off ./vendor/bin/phpunit --colors=always --testsuite=functional",
    "test-unit-coverage": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --colors=always --testsuite=unit --coverage-html var/test/coverage",
    "test-unit": "php -d xdebug.mode=off ./vendor/bin/phpunit --colors=always --testsuite=unit",
    "test" : [
      "@test-unit",
      "@test-functional"
    ],
    "validate-schema": "@app orm:validate-schema",
    "check": [
      "@validate-schema",
      "@lint",
      "@code-fix",
      "@psalm",
      "@test",
      "@clear"
    ]
  }
}
