<?xml version="1.0"?>
<psalm
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    xmlns="https://getpsalm.org/schema/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

    reportMixedIssues="true"
    resolveFromConfigFile="true"
    findUnusedCode="false"
    findUnusedPsalmSuppress="true"
    cacheDirectory="./var/cache/psalm.cache"
>
    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
        <pluginClass class="Lctrs\PsalmPsrContainerPlugin\Plugin"/>
    </plugins>
    <projectFiles>
        <directory name="bin"/>
        <directory name="config"/>
        <directory name="public"/>
        <directory name="src"/>
        <directory name="tests"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <LessSpecificReturnType errorLevel="info"/>
        <!-- https://github.com/sebastianbergmann/phpunit/issues/3742 -->
        <InternalMethod>
            <errorLevel type="suppress">
                <referencedMethod name="PHPUnit\Framework\MockObject\Builder\InvocationMocker::method" />
                <referencedMethod name="PHPUnit\Framework\MockObject\Builder\InvocationMocker::with" />
                <referencedMethod name="PHPUnit\Framework\MockObject\Builder\InvocationMocker::willReturn" />
                <referencedMethod name="PHPUnit\Framework\MockObject\Builder\InvocationMocker::willReturnCallback" />
            </errorLevel>
        </InternalMethod>
    </issueHandlers>
</psalm>