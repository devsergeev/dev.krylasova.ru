{
  "name": "devsergeev/krylasova.ru",
  "description": "krylasova.ru",
  "type": "project",
  "authors": [
    {
      "name": "devsergeev",
      "email": "sergeev.vasily.v@gmail.com"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^8.0",
    "php-di/php-di": "^6.3",
    "ramsey/uuid": "^4.1",
    "slim/psr7": "^1.3",
    "slim/slim": "^4.7",
    "symfony/console": "^5.2",
    "webmozart/assert": "^1.10"
  },
  "require-dev": {
    "overtrue/phplint": "^2.3",
    "phpunit/phpunit": "^9.5",
    "psalm/plugin-phpunit": "^0.15.1",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "app": "php bin/app.php --ansi",
    "clear": "rm -rf var/*",
    "code-check": "phpcs",
    "code-fix": "phpcbf",
    "psalm": "psalm",
    "test-unit": "phpunit --colors=always --testsuite=unit",
    "test-unit-coverage": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --colors=always --testsuite=unit --coverage-html var/coverage",
    "test-functional": "phpunit --colors=always --testsuite=functional",
    "test-functional-coverage": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --colors=always --testsuite=functional --coverage-html var/coverage",
    "lint": "phplint"
  }
}
